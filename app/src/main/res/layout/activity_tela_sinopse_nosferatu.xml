<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010E1A"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Capa do filme  -->
            <ImageView
                android:id="@+id/imgCapa"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                android:src="@drawable/filme04"
                android:alpha="0.8"/>

            <!-- Nota IMDB -->
            <TextView
                android:id="@+id/imdbNota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IMDB 7.2"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingHorizontal="13dp"
                android:paddingVertical="4dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="22dp"
                android:layout_margin="12dp"
                android:background="@drawable/tag01"
                android:textSize="14sp" />
        </RelativeLayout>

        <!-- Tags -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fantasia"
                android:textColor="#000000"
                android:background="@drawable/tag01"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textSize="13sp"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2h 12m"
                android:textColor="#000000"
                android:background="@drawable/tag01"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textSize="13sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Título da sinopse -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sinopse:"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <!-- Texto da sinopse -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:justificationMode="inter_word"
            android:text="Uma nova adaptação do clássico do terror, Nosferatu é um conto gótico sobre a obsessão de um terrível vampiro por uma mulher assombrada. A história se passa nos anos de 1800 na Alemanha e acompanha o rico e misterioso Conde Orlok (Bill Skarsgård) na busca por um novo lar. O vendedor de imóveis Thomas Hutter (Nicholas Hoult) fica responsável por conduzir os negócios de Orlok e, então, viaja para as montanhas da Transilvânia para prosseguir com as burocracias da nova propriedade do nobre."/>
    </LinearLayout>
</ScrollView>
