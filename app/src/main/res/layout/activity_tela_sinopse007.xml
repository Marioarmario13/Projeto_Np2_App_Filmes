<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#010E1A"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Capa do filme  -->
            <FrameLayout
                android:layout_width="400dp"
                android:layout_height="500dp"
                android:clipToOutline="true">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image007"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginBottom="4dp"
                    android:alpha="0.7"
                    android:scaleType="centerCrop"
                    android:src="@drawable/filme01"
                    app:shapeAppearanceOverlay="@style/RoundedImageView" />

            </FrameLayout>

            <!-- Nota IMDB -->
            <TextView
                android:id="@+id/imdbNota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IMDB 8.6"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingHorizontal="13dp"
                android:paddingVertical="4dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="22dp"
                android:layout_margin="12dp"
                android:background="@drawable/tag01"
                android:textSize="14sp" />
        </RelativeLayout>

        <!-- Nome do Filme -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="007 - Sem Tempo Para Morrer"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="4dp"
            android:lineHeight="30dp"/>

        <!-- Tags -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ação"
                android:textColor="#000000"
                android:background="@drawable/tag01"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1h 20m"
                android:textColor="#000000"
                android:background="@drawable/tag01"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textSize="13sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Título da sinopse -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sinopse:"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <!-- Texto da sinopse -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:justificationMode="inter_word"
            android:text="Em 007 - Sem Tempo Para Morrer, depois de sair do serviço ativo da MI6, James Bond (Daniel Craig) vive tranquilamente na Jamaica, mas como nem tudo dura pouco, a vida do espião 007 é agitada mais uma vez. Felix Leiter (Jeffrey Wright) é um velho amigo da CIA que procura o inglês para um pequeno favor de ajudá-lo em uma missão secreta."/>

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltar ao menu"
            android:layout_marginTop="24dp"
            android:backgroundTint="#F1C40F"
            android:textColor="#000000"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>
